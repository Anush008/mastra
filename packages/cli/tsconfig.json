{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021",
    "module": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/files/**"]
}
